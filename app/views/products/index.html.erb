<div class='container'>
  <div class='row'>
    <div class='col-ms-12'>
      <h1>Productos</h1>
      <div class='text-right'>
        <%= link_to 'Publicar Producto', new_product_path, class: 'btn btn-success btn-lg' %>
      </div>
      <br>
      <table class='table'>
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>URL</th>
          <th>Descripci√≥n</th>
          <th></th>
        </tr>
        <% @products.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= link_to p.name, p %></td>
          <td><%= p.url %></td>
          <!-- <td><%= link_to p.url, p.url %></td> Para generar link en el url-->
          <td><%= p.description %></td>
          <th>
            <%= link_to "Editar", edit_product_path(p), class: 'btn btn-primary btn-sm' %>
            <%= link_to "Eliminar", p, method: :delete, data:{confirm:"Estas seguro de eliminar este producto?"}, class: 'btn btn-danger btn-sm' %>
          </th>
        </tr>
        <%end %>
      </table>
    </div>
  </div>
</div>
